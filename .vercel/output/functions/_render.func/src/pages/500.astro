---
import Layout from "../layouts/Layout.astro";
---

<Layout title="500 - Server Error | Webmoov" description="Er is een fout opgetreden">
	<section class="section error-page">
		<div class="container">
			<h1>500 - Server Fout</h1>
			<p>Er is een onverwachte fout opgetreden. Probeer het later opnieuw.</p>
			<a href="/" class="button">Terug naar home</a>
		</div>
	</section>
</Layout>

<style>
	.error-page {
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.container {
		max-width: 600px;
	}

	h1 {
		font-size: var(--font-size-heading-lg);
		margin-bottom: 1rem;
	}

	p {
		font-size: var(--font-size-lg);
		color: var(--text-body);
		margin-bottom: 2rem;
	}

	.button {
		display: inline-block;
		padding: 1rem 2rem;
		background: var(--clr-accent-500);
		color: white;
		text-decoration: none;
		border-radius: var(--border-radius);
		transition: background 0.3s ease;
	}

	.button:hover {
		background: var(--clr-accent-600);
	}
</style>
