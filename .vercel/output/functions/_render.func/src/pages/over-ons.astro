---
import Bio from "../components/Bio.astro";
import CTA from "../components/CTA.astro";
import Process from "../components/Process.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import aboutUsImage from "../assets/about-us.jpg";
---

<Layout
	title="Over Ons | Web Design & Development Bureau | Webmoov"
	description="Webmoov is een web design en development bureau gespecialiseerd in maatwerk websites. Ons team van experts creÃ«ert digitale ervaringen die impact maken voor uw bedrijf. 150+ succesvolle projecten en 98% klanttevredenheid."
>
	<section class="section">
		<div class="container">
			<div class="content">
				<h1 class="section-title">Over Webmoov - Web Design & Development Bureau</h1>
				<p class="subtitle">
					Een team van gepassioneerde experts gespecialiseerd in maatwerk websites en digitale oplossingen die impact maken voor uw bedrijf.
				</p>
				<div class="stats">
					<div class="stats-item">
						<p class="number">150+</p>
						<p>Succesvolle projecten</p>
					</div>
					<div class="stats-item">
						<p class="number">98%</p>
						<p>Klanttevredenheid</p>
					</div>
					<div class="stats-item">
						<p class="number">24/7</p>
						<p>Support beschikbaar</p>
					</div>
				</div>
			</div>
			<div class="image">
				<Image
					src={aboutUsImage}
					alt="Wij zijn Webmoov"
					width={800}
					height={600}
					class="box-shadow"
					format="webp"
					quality="high"
				/>
			</div>
		</div>
	</section>
	<Process />
	<Bio />
	<CTA />
</Layout>

<style>
	.container {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		align-items: center;
	}

	@media (min-width: 760px) {
		.container {
			grid-template-columns: 1fr 1fr;
			gap: 4.5rem;
		}
	}

	.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 3rem;
		width: 100%;
	}

	@media (min-width: 760px) {
		.content {
			align-items: flex-start;
			text-align: left;
		}
	}

	.section-title {
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.subtitle {
		animation: fadeInUp 0.8s ease-out forwards;
		animation-delay: 0.2s;
		opacity: 0;
		max-width: 35ch;
		color: var(--clr-gray-600);
	}

	.stats {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		width: 100%;
	}

	@media (min-width: 760px) {
		.stats {
			grid-template-columns: repeat(3, 1fr);
			gap: 1.5rem;
			justify-content: start;
		}
	}

	.stats-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	@media (min-width: 760px) {
		.stats-item {
			align-items: flex-start;
		}
	}

	.stats-item .number {
		font-size: var(--font-size-xl);
		font-weight: 700;
		font-family: var(--ff-accent);
		color: var(--clr-accent-500);
		line-height: 1;
		margin: 0;
	}

	.stats-item p:not(.number) {
		font-size: var(--font-size-sm);
		font-family: var(--ff-accent);
		color: var(--text-body);
		margin: 0;
	}

	.image {
		width: 100%;
	}

	.image img {
		width: 100%;
		height: auto;
		aspect-ratio: 4/3;
		object-fit: cover;
		border-radius: var(--border-radius);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
