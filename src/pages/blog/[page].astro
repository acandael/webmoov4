---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getEntry } from "astro:content";
import { render } from "astro:content";
import { Image, getImage } from "astro:assets";

// helpers
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import FormattedDate from "../../components/ui/FormattedDate.astro";
import AuthorCard from "../../components/blog/AuthorCard.astro";
import StructuredData from "../../components/StructuredData.astro";

export const getStaticPaths = (async () => {
	const posts = await getCollection("blog", ({ data }) => !data.isDraft);
	return posts.map((post) => ({
		params: {
			page: post.data.slug,
		},
		props: {
			post,
		},
	}));
}) satisfies GetStaticPaths;

const { post } = Astro.props;

// Add error handling for render
let Content;
try {
	const rendered = await render(post);
	Content = rendered.Content;
} catch (error) {
	console.error('Error rendering blog post:', error);
	throw new Error('Failed to render blog post');
}

const { title, description, pubDate, image, author } = post.data;

// Safely get image source
let coverImageSource = '';
try {
	const imageResult = await getImage({ src: post.data.image });
	coverImageSource = imageResult.src;
} catch (error) {
	console.error('Error processing image:', error);
	// Fallback to placeholder
	coverImageSource = '/logo.png';
}

// Safely convert date to ISO string
let dateISO;
try {
	dateISO = pubDate instanceof Date ? pubDate.toISOString() : new Date(pubDate).toISOString();
} catch (error) {
	console.error('Error converting date:', error);
	dateISO = new Date().toISOString();
}

// Article Schema
const articleSchema = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: title,
	description: description,
	image: `https://www.webmoov.be${coverImageSource}`,
	datePublished: dateISO,
	dateModified: dateISO,
	author: {
		"@type": "Person",
		name: author,
	},
	publisher: {
		"@type": "Organization",
		name: "Webmoov",
		logo: {
			"@type": "ImageObject",
			url: "https://www.webmoov.be/logo.png",
		},
	},
	mainEntityOfPage: {
		"@type": "WebPage",
		"@id": `https://www.webmoov.be/blog/${post.data.slug}`,
	},
};
---

<Layout title={title} description={description} image={coverImageSource}>
	<StructuredData schema={articleSchema} />

	<div class="blog-post">
		<!-- Post Header -->
		<section class="section" data-padding="compact">
			<div class="container" data-width="narrow">
				<a href="/blog" class="back-link">
					<span class="arrow-icon">‚Üê</span>
					Terug naar alle artikels
				</a>
				<div class="blog-post-meta">
					<FormattedDate pubDate={pubDate} />
				</div>

				<h1 class="blog-post-title">{title}</h1>

				<p class="blog-post-description">{description}</p>

				<div class="blog-post-author">
					<p>Door {author}</p>
				</div>
			</div>
		</section>

		<!-- Post Feature Image -->
		<section class="feature-image-section" data-padding="blog">
			<div class="container" data-width="medium">
				{
					image && (
						<Image src={image} alt={title} width={1200} height={675} class="blog-feature-image" />
					)
				}
			</div>
		</section>

		<!-- Post Content -->
		<section class="section" data-padding="blog">
			<div class="container" data-width="narrow">
				<div class="blog-post-content">
					<Content />
				</div>
			</div>
		</section>
		<section class="section author-section" data-padding="blog">
			<div class="container" data-width="narrow">
				<AuthorCard align="left" />
			</div>
		</section>
	</div>
</Layout>

<style>
	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: var(--ff-accent);
		font-size: var(--font-size-regular);
		color: var(--clr-gray-600);
		text-decoration: none;
		margin-bottom: 2rem;
		transition: all 0.2s ease;
	}

	.back-link:hover {
		color: var(--background-accent);
	}

	.arrow-icon {
		font-size: 1.1em;
	}

	.blog-post-meta {
		font-family: var(--ff-accent);
		font-size: var(--font-size-sm);
		color: var(--clr-gray-500);
		margin-bottom: 1.5rem;
	}

	.blog-post-title {
		font-family: var(--ff-body);
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		line-height: 1.1;
		font-weight: 400;
		margin-bottom: 1.5rem;
		color: var(--text-body);
	}

	.blog-post-description {
		font-family: var(--ff-body);
		font-size: var(--font-size-lg);
		line-height: 1.5;
		margin-bottom: 1.5rem;
		color: var(--clr-gray-500);
		max-width: 75ch;
	}

	.blog-post-author {
		font-family: var(--ff-accent);
		font-size: var(--font-size-sm);
		margin-bottom: 2rem;
		color: var(--clr-gray-500);
	}

	.feature-image-section {
		margin-bottom: 2rem;
	}

	.blog-feature-image {
		width: 100%;
		height: auto;
		border-radius: var(--border-radius);
		box-shadow: var(--box-shadow);
	}

	.blog-post-content {
		font-family: var(--ff-body);
		font-size: var(--font-size-md);
		line-height: 1.8;
		color: var(--text-body);
	}

	.blog-post-content :global(h2) {
		font-size: var(--font-size-xl);
		margin-top: 3rem;
		margin-bottom: 1.5rem;
		font-weight: 400;
		color: var(--text-body);
	}

	.blog-post-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.blog-post-content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: var(--border-radius);
		margin-block: 2rem;
	}

	.author-section {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
</style>
