---
import Layout from "../layouts/Layout.astro";
import paintbrush from '../assets/paintbrush-big.svg';
import Button from "../components/ui/Button.astro";
import Heading from "../components/ui/Heading.astro";
import check from '../assets/check.svg';
import ContactForm from "../components/ContactForm";
---

<Layout>
  <section class="section product-section">
    <div class="container">
      <div class="product-grid">
        <div class="content-col">
          <div class="heading">
            <div class="brush-icon">
              <img src={paintbrush.src} alt="paintbrush" />
            </div>
              <h1 class="section-title">One Pager Website</h1>
          </div>
            <p class="subtitle">Perfect voor startups en kleine bedrijven die snel online willen gaan.</p>
            <Button label="Start het gesprek" hiddenLabel="en we contacteren je binnen 24 uur" href="#" align="left" />
         
        </div>
        <div class="image-col">
          <img src="src/assets/custom-website.jpg" alt="Modern workspace setup with desktop computer" class="hero-image">
        </div>
      </div>
    </div>
  </section>
  <section class="section features-section">
    <div class="container flow">
      <Heading>
        <h2 class="section-title">Wat je krijgt</h2>
      </Heading>
      <div class="features-grid">
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Design op maat</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Contactformulier</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">SEO optimalisatie</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Social media integratie</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Web analytics</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Snelle laadtijd</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Secure Socket Layer (SSL)</h3>
        </div>
        <div class="card">
          <img src={check.src} alt="item 1" />
          <h3 class="feature-title">Responsive design</h3>
        </div>
      </div>
    </div>
  </section>
  <section class="section process-section">
    <div class="container">
      <Heading>
        <h2 class="section-title">Onze proces</h2>
      </Heading>
      <div class="process-timeline">
        <div class="process-step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Kennismaking</h3>
            <p>We bespreken je wensen en doelen voor je website</p>
          </div>
        </div>
        <div class="process-step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Design</h3>
            <p>We maken een uniek design dat past bij jouw merk</p>
          </div>
        </div>
        <div class="process-step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Ontwikkeling</h3>
            <p>We bouwen je website met de laatste technologieÃ«n</p>
          </div>
        </div>
        <div class="process-step">
          <div class="step-number">4</div>
          <div class="step-content">
            <h3>Lancering</h3>
            <p>Je website gaat live en is klaar voor bezoekers</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="section form-section">
    <div class="container" data-width="medium">
      <div class="contactform-container">
        <ContactForm align="center" client:visible />
      </div>
    </div>
  </section>
</Layout>

<style>
  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: auto;
  }

  .content-col {
    display: flex;
    flex-direction: column;
    justify-content: start;
    gap: 3rem;
    align-items: flex-start;
  }

  .heading {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .section-title {
    font-size: var(--font-size-heading-lg);
  }

  .subtitle {
    max-width: 35ch;
  }

  .features-section {
    background-color: var(--background-light-gray);
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .card {
    display: flex;
    align-items: center;
    gap: .5rem;
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: var(--box-shadow);
  }

  .feature-title {
    font-size: var(--font-size-heading-sm);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  .process-section {
    padding: 6rem 0;
    text-align: center;
  }

  .process-timeline {
    position: relative;
    max-width: 800px;
    margin: 3rem auto 0;
    display: flex;
    flex-direction: column;
    gap: 5rem;
    padding-left: 3rem;
  }

  .process-timeline::before {
    content: '';
    position: absolute;
    left: calc(1rem + 1px);
    top: 0;
    height: 100%;
    width: 2px;
    background-color: #E5E7EB;
    z-index: -1;
  }

  .process-step {
    position: relative;
    text-align: left;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    display: flex;
    align-items: flex-start;
  }

  .process-step.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .process-timeline {
    --step-delay: 0.15s;
  }

  .process-step:nth-child(1) { transition-delay: calc(var(--step-delay) * 1); }
  .process-step:nth-child(2) { transition-delay: calc(var(--step-delay) * 2); }
  .process-step:nth-child(3) { transition-delay: calc(var(--step-delay) * 3); }
  .process-step:nth-child(4) { transition-delay: calc(var(--step-delay) * 4); }

  .step-number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    background-color: #FF5533;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 500;
    margin-left: -3rem;
    margin-right: 2rem;
    position: relative;
    z-index: 1;
  }

  .step-number::before {
    display: none;  /* Remove the individual line segments */
  }

  .step-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .step-content h3 {
    font-size: var(--font-size-heading-md);
    font-weight: 500;
    margin: 0;
  }

  .step-content p {
    color: var(--text-muted);
    line-height: 1.6;
    font-size: var(--font-size-regular);
    margin: 0;
  }

  @media (max-width: 768px) {
    .process-timeline {
      margin-top: 3rem;
      gap: 3rem;
      padding-left: 2.5rem;
    }
  }

  .form-section {
    background-color: var(--background-light-gray);
  }

  .contactform-container {
    display: flex;
    flex-direction: column;
    padding-block: 4.5rem;
    padding-inline: 3rem;
    border: 1px solid var(--box-shadow);
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
      } else {
        entry.target.classList.remove('animate');
      }
    });
  }, {
    threshold: 0.2,
    rootMargin: '-50px 0px -50px 0px'
  });

  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.process-step').forEach((step) => {
      observer.observe(step);
    });
  });
</script>