---
import Bio from "../components/Bio.astro";
import CTA from "../components/CTA.astro";
import Process from "../components/Process.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import aboutUsImage from '../assets/about-us.jpg';
---

<Layout>
  <section class="section">
    <div class="container">
      <div class="content">
        <h1 class="section-title">Wij zijn Webmoov</h1>
        <p class="subtitle">Een team van gepassioneerde experts die digitale ervaringen creÃ«ren 
          die impact maken.</p>
          <div class="stats">
            <div class="stats-item">
              <p class="number">150+</p>
              <p>Succesvolle projecten</p>
            </div>
            <div class="stats-item">
              <p class="number">98%</p>
              <p>Klanttevredenheid</p>
            </div>
            <div class="stats-item">
              <p class="number">24/7</p>
              <p>Support beschikbaar</p>
            </div>
          </div>
      </div>
      <div class="image">
        <Image 
          src={aboutUsImage}
          alt="Wij zijn Webmoov"
          width={800}
          height={600}
          class="box-shadow"
          format="webp"
          quality="high"
        />
      </div>
    </div>
  </section>
  <Process />
  <Bio />
  <CTA />
</Layout>

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .content {
    display: flex;
    width: 665.837px;
    height: 298.229px;
    flex-direction: column;
    align-items: flex-start;
    gap: 48px;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .section-title {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .subtitle {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }
</style>