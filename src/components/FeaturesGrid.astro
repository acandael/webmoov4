---
import check from "../assets/check.svg";
import Heading from "./ui/Heading.astro";

const { features } = Astro.props;

interface Feature {
	title: string;
	// Add any additional properties that might be needed for features
}

interface Props {
	features: Feature[];
}
---

<section class="section features-section">
	<div class="container flow">
		<Heading>
			<h2 class="section-title">Wat je krijgt</h2>
			<p class="subtitle">Alles wat je nodig hebt voor een succesvolle online aanwezigheid</p>
		</Heading>
		<div class="features-grid">
			{
				features.map((feature, index) => (
					<div class="feature-card" data-feature-card data-index={index}>
						<div class="icon-wrapper">
							<div class="icon-background">
								<svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							</div>
						</div>
						<h3 class="feature-title">{feature.title}</h3>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.features-section {
		background: linear-gradient(180deg, var(--background-light-gray) 0%, #ffffff 100%);
		padding-block: 5rem;
		position: relative;
		overflow: hidden;
	}

	.features-section::before {
		content: "";
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 150%;
		height: 100%;
		background: radial-gradient(
			ellipse at center,
			rgba(255, 87, 51, 0.03) 0%,
			transparent 70%
		);
		pointer-events: none;
	}

	.subtitle {
		color: var(--clr-gray-600);
		max-width: 50ch;
		margin-inline: auto;
	}

	.features-grid {
		display: grid;
		gap: 1.5rem;
		margin-top: 3rem;
		position: relative;
		z-index: 1;

		@media (width > 760px) {
			grid-template-columns: repeat(4, 1fr);
			gap: 2rem;
			margin-top: 4rem;
		}
	}

	/* Feature Card */
	.feature-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 1.25rem;
		padding: 2.5rem 1.5rem;
		background: white;
		border-radius: 20px;
		box-shadow:
			0 4px 20px rgba(0, 0, 0, 0.06),
			0 1px 4px rgba(0, 0, 0, 0.04);
		border: 1px solid rgba(0, 0, 0, 0.04);
		position: relative;
		opacity: 0;
		transform: translateY(30px) scale(0.95);
		transition:
			transform 0.4s ease,
			box-shadow 0.4s ease,
			opacity 0.6s ease,
			border-color 0.3s ease;
	}

	.feature-card.animate {
		opacity: 1;
		transform: translateY(0) scale(1);
	}

	.feature-card::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, #ff5733 0%, #e64d2a 100%);
		border-radius: 20px 20px 0 0;
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.4s ease;
	}

	.feature-card:hover {
		transform: translateY(-8px);
		box-shadow:
			0 12px 40px rgba(0, 0, 0, 0.12),
			0 4px 12px rgba(0, 0, 0, 0.08);
		border-color: rgba(255, 87, 51, 0.1);
	}

	.feature-card:hover::before {
		transform: scaleX(1);
	}

	.feature-card:hover .icon-background {
		transform: scale(1.1) rotate(-5deg);
		box-shadow:
			0 8px 24px rgba(255, 87, 51, 0.15),
			0 4px 12px rgba(255, 87, 51, 0.1);
		border-color: rgba(255, 87, 51, 0.3);
	}

	.feature-card:hover .check-icon {
		animation: checkPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	/* Staggered animation delays */
	.feature-card[data-index="0"] {
		transition-delay: 0.1s;
	}
	.feature-card[data-index="1"] {
		transition-delay: 0.15s;
	}
	.feature-card[data-index="2"] {
		transition-delay: 0.2s;
	}
	.feature-card[data-index="3"] {
		transition-delay: 0.25s;
	}
	.feature-card[data-index="4"] {
		transition-delay: 0.3s;
	}
	.feature-card[data-index="5"] {
		transition-delay: 0.35s;
	}
	.feature-card[data-index="6"] {
		transition-delay: 0.4s;
	}
	.feature-card[data-index="7"] {
		transition-delay: 0.45s;
	}

	/* Icon Wrapper */
	.icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.icon-background {
		width: 64px;
		height: 64px;
		border-radius: 16px;
		background: white;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow:
			0 6px 20px rgba(0, 0, 0, 0.08),
			0 3px 10px rgba(0, 0, 0, 0.05);
		border: 2px solid rgba(255, 87, 51, 0.15);
		transition:
			transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
			box-shadow 0.4s ease,
			border-color 0.4s ease;
		position: relative;
		overflow: hidden;
	}

	.icon-background::before {
		content: "";
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: radial-gradient(
			circle,
			rgba(255, 87, 51, 0.1) 0%,
			transparent 70%
		);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.feature-card:hover .icon-background::before {
		opacity: 1;
	}

	.check-icon {
		color: #ff5733;
		width: 28px;
		height: 28px;
		stroke-width: 2.5;
		position: relative;
		z-index: 1;
	}

	@keyframes checkPop {
		0% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.3);
		}
		100% {
			transform: scale(1);
		}
	}

	/* Feature Title */
	.feature-title {
		font-family: var(--ff-accent);
		font-size: var(--font-size-regular);
		font-weight: 500;
		margin: 0;
		color: var(--clr-black);
		line-height: 1.4;
	}

	@media (width > 760px) {
		.feature-card {
			padding: 3rem 2rem;
			gap: 1.5rem;
		}

		.icon-background {
			width: 72px;
			height: 72px;
		}

		.check-icon {
			width: 32px;
			height: 32px;
		}

		.feature-title {
			font-size: var(--font-size-md);
			font-weight: 600;
		}
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("animate");
					}
				});
			},
			{
				threshold: 0.1,
				rootMargin: "0px 0px -50px 0px",
			},
		);

		document.querySelectorAll("[data-feature-card]").forEach((card) => {
			observer.observe(card);
		});
	});
</script>
