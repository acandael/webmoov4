---
import Button from "./ui/Button.astro";
---

<section class="section hero">
	<div class="container">
		<div class="wrapper">
			<div class="heading-hero">
				<h1 class="section-title animate-slide-down">Wij creÃ«ren maatwerk websites</h1>
				<p class="subtitle animate-slide-up">
					Van eenvoudige landingspagina's tot complexe e-commerce oplossingen,<br />
					wij bouwen websites die meegroeien met uw bedrijf.
				</p>
			</div>

			<Button
				label="Ontdek onze producten"
				hiddenLabel="een onepager website, een premium website of een e-commerce website"
				href="#producten"
				align="center"
			/>
		</div>
	</div>
</section>

<style>
	.container {
		/* max-width: 791px; */
	}
	.hero {
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.heading-hero {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-block-end: 2rem;

		h1 {
			font-size: var(--font-size-heading-md);
		}

		p {
			font-size: var(--font-size-body);
		}
	}

	.section-title {
		opacity: 0;
		transform: translateY(-50px);
		animation: slideDown 0.8s ease forwards;
	}

	.subtitle {
		opacity: 0;
		transform: translateY(50px);
		animation: slideUp 0.8s ease forwards;
		animation-delay: 0.2s;
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

<script>
	// Smooth scrolling
	document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
		anchor.addEventListener("click", (e) => {
			e.preventDefault();
			const href = anchor.getAttribute("href");
			if (href) {
				const targetElement = document.querySelector(href);
				if (targetElement) {
					targetElement.scrollIntoView({
						behavior: "smooth",
						block: "start",
					});
				}
			}
		});
	});
</script>
